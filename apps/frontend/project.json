{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/frontend"
      },
      "configurations": {
        "development": {
          "outputPath": "apps/frontend"
        },
        "production": {
          "generateLockfile": true
        }
      },
      "dependsOn": ["^build"]
    },
    "serve": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "frontend:build",
        "dev": true,
        "serveTarget": "frontend:serve"
      },
      "configurations": {
        "development": {
          "buildTarget": "frontend:build:development",
          "dev": true,
          "serveTarget": "frontend:serve:development"
        },
        "production": {
          "buildTarget": "frontend:build:production",
          "dev": false,
          "customServerTarget": "frontend:serve:production"
        }
      }
    },
    "export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "frontend:build:production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/frontend/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/frontend/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "container": {
      "executor": "@nx-tools/nx-container:build",
      "dependsOn": ["build"],
      "defaultConfiguration": "local",
      "options": {
        "engine": "docker",
        "context": "dist/apps/frontend",
        "file": "apps/frontend/Dockerfile"
      },
      "configurations": {
        "local": {
          "tags": ["olios-frontend:latest"],
          "push": false
        },
        "production": {
          "tags": ["ghcr.io/gravitytwog/olios-frontend:latest"],
          "push": true
        }
      }
    }
  }
}
